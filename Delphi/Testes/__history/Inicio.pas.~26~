begin
     DM.BDDelphi.Open;
end;

procedure TForm1.Pessoas1Click(Sender: TObject);
var
  TabSheet: TTabSheet;
begin
     try
     finally
     end;

     try
     except
     end;


     TabSheet := TTabSheet.Create(PageControl1);
     Form2    := TForm2.Create(Self);
     try



        if Form2=nil then


        TabSheet.Caption := 'Cadastro de Pessoas';
        TabSheet.PageControl := PageControl1;
        Form2.Parent := TabSheet;
        Form2.Show;


     finally
        FreeAndNil(TabSheet);
     end;
end;

