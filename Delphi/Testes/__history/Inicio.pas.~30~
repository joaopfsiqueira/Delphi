{$R *.dfm}

uses CadastroPessoas, ConsultaPessoas, DModule;


procedure TForm1.FormClose(Sender: TObject; var Action: TCloseAction);
begin
      DM.BDDelphi.Close;
end;

procedure TForm1.FormShow(Sender: TObject);
begin
     DM.BDDelphi.Open;
end;

procedure TForm1.Pessoas1Click(Sender: TObject);
begin
     try
//        tbsCreate := TTabSheet.Create(PageControl1);
        Form2    := TForm2.Create(Self);
       try
     //     tbsCreate.Caption := 'Cadastro de Pessoas';
   //       tbsCreate.PageControl := PageControl1;
          Form2.Parent := tbsCreate;
          Form2.Show;
       finally
//          FreeAndNil(TabSheet);
//          FreeAndNil(Form2);
       end;
     except
        on E:Exception do
           ShowMessage('Erro ao tentar abrir formulário: '+ E.Message);
     end;
end;

procedure TForm1.Pessoas2Click(Sender: TObject);
begin
     if FrmConsulta=nil then
     FrmConsulta:=TFrmConsulta.Create(Self);
     FrmConsulta.Show
end;

end.
